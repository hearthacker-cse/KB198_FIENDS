<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:textAlignment="textStart"
        android:text="@string/data_sharing"
        android:fontFamily="arial"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:textAlignment="textStart"
        android:text="@string/your_data_will_be_shared_only_with_the_government_of_india_the_app_does_not_allow_your_name_and_number_to_be_disclosed_to_the_public_at_large_at_any_time"
        android:fontFamily="arial"
        android:textColor="@color/colorGrey"
        android:textSize="@dimen/_10sdp" />

</LinearLayout>